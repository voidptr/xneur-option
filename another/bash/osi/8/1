getarr ()
{
   cnt=0
   for i in `ls | sort`
   do
      if [ -f "$i" ];
      then
         files[$cnt]="$i"
         cnt=$(($cnt+1))
      fi
   done
   echo ${files[@]};
}

$files=`getarr`
while [ "$file" == "`getarr`" ];
do
   sleep 1
done

echo "Some file was created"
